<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map background-color="steelblue" srs="+proj=longlat +datum=WGS84">
  <Style name="labelstyle">
    <Rule>
      <TextSymbolizer face-name="DejaVu Sans Book" size="15" fill="yellow" halo-fill= "red" halo-radius="1" spacing="5" placement="interior" allow-overlap="true">[NAME]</TextSymbolizer>
      
    </Rule>
  </Style>

  <Layer name="labelLayer" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    <StyleName>labelstyle</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">TM_WORLD_BORDERS-0.3.shp</Parameter>
    </Datasource>
  </Layer>

</Map>
